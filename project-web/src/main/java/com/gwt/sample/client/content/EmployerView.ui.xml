<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style field='footer' src="ContentFooter.css" />
		
	<ui:style field='header' src="ContentHeader.css" />
		
	<ui:style field='menu' src="ContentMenu.css" />
		
	<ui:style field='content' src="Content.css" />
		
	<ui:style field='common' src="../common/css/Common.css" />
		
	<g:HTMLPanel width="100%" height="100%">
		<g:VerticalPanel width="100%" height="100%" spacing="10">
			<g:Cell height="50px">
				<g:HTMLPanel height="50px" />
			</g:Cell>
			<g:Cell height="100%">
				<g:HTMLPanel>
					<g:FlowPanel ui:field="employerDetailsList" />
				</g:HTMLPanel>
			</g:Cell>
			<g:HTMLPanel>
				<g:Button ui:field="addEmployer" styleName="{common.button}">
					<ui:msg key="addNewEmployer" description="Adding New Employer Details">Add Employer</ui:msg>
				</g:Button>
			</g:HTMLPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
