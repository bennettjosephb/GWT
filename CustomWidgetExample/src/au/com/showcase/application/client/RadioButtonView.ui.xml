<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
		label {
			display: inline-block;
			cursor: pointer;
			position: relative;
			padding-left: 35px;
			margin-right: 15px;
			font-size: 25px;
			vertical-align: middle;
		}
		
		input[type=radio] {
			display: none;
		}
		
		label:before {
			background-image: url(csscheckbox_f2e3bb467e4805c00da9922648868de9.png);
			content: "";
			display: inline-block;
			width: 32px;
			height: 32px;
			margin-right: 10px;
			position: absolute;
			left: 0;
			/*border-radius:5px 5px 0px 0px;*/
		}
		
		.gwt-RadioButton label:before {
			background-color: #FF0000;
		}
		
		input[type=radio]:checked+label:before {
			background-position: 0 -32px;
			background-image color: aqua;
			font-size: 30px;
			text-align: center;
			line-height: 13px;
		}
		
		.css3button {
			font-family: Arial, Helvetica, sans-serif;
			font-size: 15px;
			color: #ffffff;
			padding: 8px 20px;
			background: -moz-linear-gradient(top, #ff9e9e 0%, #cc3f3f 50%, #b01111 50%, #8a0404);
			background: -webkit-gradient(linear, left top, left bottom, from(#ff9e9e),
				color-stop(0.50, #cc3f3f), color-stop(0.50, #b01111), to(#8a0404));
			-moz-border-radius: 2px;
			-webkit-border-radius: 2px;
			border-radius: 2px;
			border: 1px solid #b03d3d;
			-moz-box-shadow: 0px 0px 2px rgba(000, 000, 000, 0.3), inset 0px 0px 1px
				rgba(255, 255, 255, 0.6);
			-webkit-box-shadow: 0px 0px 2px rgba(000, 000, 000, 0.3), inset 0px 0px
				1px rgba(255, 255, 255, 0.6);
			box-shadow: 0px 0px 2px rgba(000, 000, 000, 0.3), inset 0px 0px 1px
				rgba(255, 255, 255, 0.6);
			text-shadow: 0px -1px 0px rgba(000, 000, 000, 1), 0px 1px 0px
				rgba(255, 255, 255, 0.2);
		}
		
		.css3button:hover {
			font-family: Arial, Helvetica, sans-serif;
			font-size: 15px;
			color: #ffffff;
			padding: 8px 20px;
			background: -moz-linear-gradient(top, #fa5757 0%, #cc3f3f 50%, #b01111 50%, #5c0202);
			background: -webkit-gradient(linear, left top, left bottom, from(#fa5757),
				color-stop(0.50, #cc3f3f), color-stop(0.50, #b01111), to(#5c0202));
			-moz-border-radius: 2px;
			-webkit-border-radius: 2px;
			border-radius: 2px;
			border: 1px solid #b03d3d;
			-moz-box-shadow: 0px 0px 2px rgba(000, 000, 000, 0.3), inset 0px 0px 1px
				rgba(255, 255, 255, 0.6);
			-webkit-box-shadow: 0px 0px 2px rgba(000, 000, 000, 0.3), inset 0px 0px
				1px rgba(255, 255, 255, 0.6);
			box-shadow: 0px 0px 2px rgba(000, 000, 000, 0.3), inset 0px 0px 1px
				rgba(255, 255, 255, 0.6);
			text-shadow: 0px -1px 0px rgba(000, 000, 000, 1), 0px 1px 0px
				rgba(255, 255, 255, 0.2);
		}
		
		.css3button:ACTIVE {
			font-family: Arial, Helvetica, sans-serif;
			font-size: 15px;
			color: #ffffff;
			padding: 8px 20px;
			background: -moz-linear-gradient(top, #8a0404 0%, #cc3f3f 50%, #b01111 50%, #ff9e9e);
			background: -webkit-gradient(linear, left top, left bottom, from(#8a0404),
				color-stop(0.50, #cc3f3f), color-stop(0.50, #b01111), to(#ff9e9e));
			-moz-border-radius: 2px;
			-webkit-border-radius: 2px;
			border-radius: 2px;
			border: 1px solid #b03d3d;
			-moz-box-shadow: 0px 0px 2px rgba(000, 000, 000, 0.3), inset 0px 0px 1px
				rgba(255, 255, 255, 0.6);
			-webkit-box-shadow: 0px 0px 2px rgba(000, 000, 000, 0.3), inset 0px 0px
				1px rgba(255, 255, 255, 0.6);
			box-shadow: 0px 0px 2px rgba(000, 000, 000, 0.3), inset 0px 0px 1px
				rgba(255, 255, 255, 0.6);
			text-shadow: 0px -1px 0px rgba(000, 000, 000, 1), 0px 1px 0px
				rgba(255, 255, 255, 0.2);
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Button ui:field="button" styleName="{style.css3button}">Click
			This !!!</g:Button>
		<g:FlowPanel width="584px" ui:field="container">
			<g:RadioButton name="new name">A</g:RadioButton>
			<g:RadioButton name="new name">B</g:RadioButton>
			<g:RadioButton name="new name">C</g:RadioButton>
			<g:RadioButton name="new name">D</g:RadioButton>
			<g:RadioButton name="new name">E</g:RadioButton>
			<g:RadioButton name="new name">F</g:RadioButton>
			<g:RadioButton name="new name">G</g:RadioButton>
			<g:RadioButton name="new name">H</g:RadioButton>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder>
