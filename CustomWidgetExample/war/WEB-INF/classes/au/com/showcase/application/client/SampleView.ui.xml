<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:c='urn:import:au.com.showcase.application.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	<ui:style>
		label {
			display: inline-block;
			cursor: pointer;
			position: relative;
			padding-left: 26px;
			margin-right: 15px;
			font-size: 13px;
			border-radius: 8px;
		}
		
		input[type=radio] {
			display: none;
			border-radius: 8px;
		}
		
		label:before {
			content: "";
			display: inline-block;
			width: 17px;
			height: 17px;
			margin-right: 10px;
			position: absolute;
			left: 0;
			bottombottom: 1px;
			background-color: #282E5A;
			box-shadow: inset 0px 2px 3px 0px rgba(0, 0, 0, .3), 0px 1px 0px 0px
				rgba(255, 255, 255, .8);
				border-radius: 8px;
		}
		
		.gwt-RadioButton label:before {
			border-radius: 8px;
		}
		
		input[type=radio]:checked+label:before {
			content: "\2022"; /* \2714 */
			color: aqua;
			font-size: 30px;
			text-align: center;
			line-height: 13px;
		}
	</ui:style>

	<g:HTMLPanel>
		<g:RadioButton name="new name" text="New RadioButton"
			/>
		<g:RadioButton name="new name" text="New RadioButton" />
		<c:ExtendedTextBox />
		<input type="radio" name="abc" />
	</g:HTMLPanel>
</ui:UiBinder>
