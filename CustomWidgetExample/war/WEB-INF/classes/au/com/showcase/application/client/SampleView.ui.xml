<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:c='urn:import:au.com.showcase.application.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	<ui:style>
		label {
			display: inline-block;
			cursor: pointer;
			position: relative;
			padding-left: 26px;
			margin-right: 15px;
			font-size: 13px;
			border-radius: 8px;
		}
		
		input[type=radio] {
			display: none;
			border-radius: 8px;
		}
		
		label:before {
			content: "";
			display: inline-block;
			width: 17px;
			height: 17px;
			margin-right: 10px;
			position: absolute;
			left: 0;
			bottombottom: 1px;
			background: #ff0004; /* Old browsers */
			/* IE9 SVG, needs conditional override of 'filter' to 'none' */
			background:
				url(data:image/svg+xml;base64,);
			background: -moz-radial-gradient(center, ellipse cover, #ff0004 35%, #a90329 67%);
			/* FF3.6+ */
			background: -webkit-gradient(radial, center center, 0px, center center, 100%,
				color-stop(35%, #ff0004), color-stop(67%, #a90329));
			/* Chrome,Safari4+ */
			background: -webkit-radial-gradient(center, ellipse cover, #ff0004 35%, #a90329 67%);
			/* Chrome10+,Safari5.1+ */
			background: -o-radial-gradient(center, ellipse cover, #ff0004 35%, #a90329 67%);
			/* Opera 12+ */
			background: -ms-radial-gradient(center, ellipse cover, #ff0004 35%, #a90329 67%);
			/* IE10+ */
			background: radial-gradient(ellipse at center, #ff0004 35%, #a90329 67%);
			/* W3C */
			filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ff0004',
				endColorstr='#a90329', GradientType=1);
			/* IE6-8 fallback on horizontal gradient */
			border-radius: 8px;
			/*border-radius:5px 5px 0px 0px;*/
		}
		
		.gwt-RadioButton label:before {
			border-radius: 8px;
		}
		
		input[type=radio]:checked+label:before {
			content: "\2022"; /* \2714 */
			color: aqua;
			font-size: 30px;
			text-align: center;
			line-height: 13px;
		}
	</ui:style>

	<g:HTMLPanel>
		<g:FlowPanel ui:field="radioContainer" width="50px">
			<g:RadioButton name="new name">A</g:RadioButton>
			<g:RadioButton name="new name">B</g:RadioButton>
			<g:RadioButton name="new name">C</g:RadioButton>
			<g:RadioButton name="new name">D</g:RadioButton>
			<g:RadioButton name="new name">E</g:RadioButton>
			<g:RadioButton name="new name">F</g:RadioButton>
			<g:RadioButton name="new name">G</g:RadioButton>
			<g:RadioButton name="new name">H</g:RadioButton>
			<g:RadioButton name="new name">I</g:RadioButton>
		</g:FlowPanel>
		<c:ExtendedTextBox />
		<input type="radio" name="abc" />
	</g:HTMLPanel>
</ui:UiBinder>
