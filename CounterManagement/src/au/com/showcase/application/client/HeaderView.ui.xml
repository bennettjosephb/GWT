<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
	.logo {
		margin: 10px;
	}
	
	.button {
		font-family: Arial, Helvetica, sans-serif;
		font-size: 14px;
		color: #ffffff;
		float: right;
		margin-right: 20px;
		margin-top: 10px;
		padding: 5px 10px;
		background: -moz-linear-gradient(top, #ff2819 0%, #ab0000);
		background: -webkit-gradient(linear, left top, left bottom, from(#ff2819),
			to(#ab0000));
		-moz-border-radius: 0px;
		-webkit-border-radius: 0px;
		border-radius: 0px;
		border: 1px solid #7d0000;
		-moz-box-shadow: 0px 1px 3px rgba(000, 000, 000, 0.5), inset 0px 0px 2px
			rgba(255, 255, 255, 0.7);
		-webkit-box-shadow: 0px 1px 3px rgba(000, 000, 000, 0.5), inset 0px 0px
			2px rgba(255, 255, 255, 0.7);
		box-shadow: 0px 1px 3px rgba(000, 000, 000, 0.5), inset 0px 0px 2px
			rgba(255, 255, 255, 0.7);
		text-shadow: 0px -1px 0px rgba(000, 000, 000, 0.4), 0px 1px 0px
			rgba(255, 255, 255, 0.3);
	}
	
	.button:HOVER {
		font-family: Arial, Helvetica, sans-serif;
		font-size: 14px;
		color: #ffffff;
		padding: 5px 10px;
		float: right;
		background: -moz-linear-gradient(top, #f7180d 0%, #a30202);
		background: -webkit-gradient(linear, left top, left bottom, from(#f7180d),
			to(#a30202));
		-moz-border-radius: 0px;
		-webkit-border-radius: 0px;
		border-radius: 0px;
		border: 1px solid #7d0000;
		-moz-box-shadow: 0px 1px 3px rgba(000, 000, 000, 0.5), inset 0px 0px 2px
			rgba(255, 255, 255, 0.7);
		-webkit-box-shadow: 0px 1px 3px rgba(000, 000, 000, 0.5), inset 0px 0px
			2px rgba(255, 255, 255, 0.7);
		box-shadow: 0px 1px 3px rgba(000, 000, 000, 0.5), inset 0px 0px 2px
			rgba(255, 255, 255, 0.7);
		text-shadow: 0px -1px 0px rgba(000, 000, 000, 0.4), 0px 1px 0px
			rgba(255, 255, 255, 0.3);
	}
	
	.button:ACTIVE {
		font-family: Arial, Helvetica, sans-serif;
		font-size: 14px;
		color: #ffffff;
		float: right;
		padding: 5px 10px;
		background: -moz-linear-gradient(top, #a30202 0%, #f7180d);
		background: -webkit-gradient(linear, left top, left bottom, from(#a30202),
			to(#f7180d));
		-moz-border-radius: 0px;
		-webkit-border-radius: 0px;
		border-radius: 0px;
		border: 1px solid #7d0000;
		-moz-box-shadow: 0px 1px 3px rgba(000, 000, 000, 0.5), inset 0px 0px 2px
			rgba(255, 255, 255, 0.7);
		-webkit-box-shadow: 0px 1px 3px rgba(000, 000, 000, 0.5), inset 0px 0px
			2px rgba(255, 255, 255, 0.7);
		box-shadow: 0px 1px 3px rgba(000, 000, 000, 0.5), inset 0px 0px 2px
			rgba(255, 255, 255, 0.7);
		text-shadow: 0px -1px 0px rgba(000, 000, 000, 0.4), 0px 1px 0px
			rgba(255, 255, 255, 0.3);
	}
	
	.headerStyle {
		background-color: #F1F1F1;
		height: 50px;
		border-bottom-color: #E0E0E0;
		border-bottom-style: solid;
		border-bottom-width: 1px;
	}
	</ui:style>

	<g:HTMLPanel styleName="{style.headerStyle}">
		<g:Image url="images/nike_brandbuttons.jpg" styleName="{style.logo}" />
		<g:Button ui:field="signin" styleName="{style.button}">Sign In</g:Button>
	</g:HTMLPanel>
</ui:UiBinder>
