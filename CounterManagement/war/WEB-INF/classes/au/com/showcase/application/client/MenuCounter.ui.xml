<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.main-menu .nav-bar {
		list-style: none;
		height: 20px;
		margin-top: 3px;
	}
	
	.main-menu .nav-bar li {
		margin-right: 60px;
		float: right;
		display: inline;
		padding: 0 10px;
	}
	
	.main-menu .nav-bar li a {
		text-decoration: none;
		padding-left: 25px;
		text-transform: uppercase;
		color: #333;
		text-shadow: 1px 1px 1px #ccc;
	}
	
	.nav-bar .nav-button-home a {
		margin-top: 3px;
		background: url("images/home.png") no-repeat 0px -2px transparent;
		background-size: 20px 20px;
	}
	
	.nav-bar .nav-button-services a {
		margin-top: 3px;
		background: url("images/search.png") no-repeat 0px -2px transparent;
		background-size: 15px 15px;
	}
	
	.nav-bar .nav-button-products a {
		background:
			url("http://www.cheesetoast.co.uk/cheesepress/wp-content/uploads/2012/08/products.gif")
			no-repeat 0px -2px transparent;
	}
	</ui:style>
	<g:HTMLPanel>
		<nav class="{style.main-menu}">
			<ul class="{style.nav-bar}">
				<li class="{style.nav-button-products}">
					<a href="#">Settings</a>
				</li>
				<li class="{style.nav-button-products}">
					<a href="#">Cancel</a>
				</li>
				<li class="{style.nav-button-products}">
					<a href="#">Report</a>
				</li>
				<li class="{style.nav-button-services}">
					<a href="#">Search</a>
				</li>
				<li class="{style.nav-button-home}">
					<a href="#">Home</a>
				</li>
			</ul>
		</nav>
	</g:HTMLPanel>
</ui:UiBinder> 